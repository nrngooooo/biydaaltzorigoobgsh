@model biydaalt.Models.Bookact

@{
    ViewData["Title"] = "Актласан номын мэдээлэл засах";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Актласан номын мэдээлэл засах</h1>

<h4>Актласан ном</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="bookactId" />
            <div class="form-group">
                <label asp-for="book.bookName" class="control-label"></label>
                <select asp-for="bookId" class="form-control" asp-items="ViewBag.bookId"></select>
                <span asp-validation-for="bookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="worker.workerName" class="control-label"></label>
                <select asp-for="workerId" class="form-control" asp-items="ViewBag.workerId"></select>
                <span asp-validation-for="workerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="act_count" class="control-label"></label>
                <input asp-for="act_count" class="form-control" />
                <span asp-validation-for="act_count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="actshaltgaan.actshaltgaanName" class="control-label"></label>
                <select asp-for="actshaltgaanId" class="form-control" asp-items="ViewBag.actshaltgaanId"></select>
                <span asp-validation-for="actshaltgaanId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="actdate" class="control-label"></label>
                <input type="date" asp-for="actdate" class="form-control" />
                <span asp-validation-for="actdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Засах" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Буцах</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
