@model biydaalt.Models.Dedturul

@{
    ViewData["Title"] = "Номын дэд төрөл засах";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Номын дэд төрөл засах</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="dedTurulId" />
            <div class="form-group">
                <label asp-for="dedTurulName" class="control-label"></label>
                <input asp-for="dedTurulName" class="form-control" />
                <span asp-validation-for="dedTurulName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="turul.turulName" class="control-label"></label>
                <select asp-for="turulId" class="form-control" asp-items="ViewBag.turulId"></select>
                <span asp-validation-for="turulId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Засах" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Буцах</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
