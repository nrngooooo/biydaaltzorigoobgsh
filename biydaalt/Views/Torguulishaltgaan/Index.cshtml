@model IEnumerable<biydaalt.Models.Torguulishaltgaan>

@{
    ViewData["Title"] = "Торгуулийн шалтгаан нүүр хуудас";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Торгуулийн шалтгаан нүүр хуудас</h1>

<p>
    <a asp-action="Create">Шинээр торгуулийн шалтгаан нэмэх</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.torguulishaltgaanName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.torguulishaltgaanName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.torguulishaltgaanId">Засах</a> |
                <a asp-action="Details" asp-route-id="@item.torguulishaltgaanId">Дэлгэрэнгүй</a> |
                <a asp-action="Delete" asp-route-id="@item.torguulishaltgaanId">Устгах</a>
            </td>
        </tr>
}
    </tbody>
</table>
