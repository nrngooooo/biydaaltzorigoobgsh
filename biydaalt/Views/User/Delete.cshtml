@model biydaalt.Models.User

@{
    ViewData["Title"] = "Үйлчлүүлэгчийн мэдээлэл устгах";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Үйлчлүүлэгчийн мэдээлэл устгах</h1>

<h3>Та үүнийг устгахдаа итгэлтэй байна уу?</h3>
<div>
    <h4>Үйлчлүүлэгчийн мэдээлэл</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.userLast)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.userLast)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.userName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.userName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.regdug)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.regdug)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.password)
