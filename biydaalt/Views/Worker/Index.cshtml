@model IEnumerable<biydaalt.Models.Worker>

@{
    ViewData["Title"] = "Ажилтаны мэдээлэл нүүр хуудас";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Ажилтаны мэдээлэл нүүр хуудас</h1>

<p>
    <a asp-action="Create">Шинээр ажилтан нэмэх</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.workerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.department.departmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.albantushaal.albantushaalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.regdug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.workerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.department.departmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.albantushaal.albantushaalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.regdug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.workerId">Засах</a> |
                <a asp-action="Details" asp-route-id="@item.workerId">Дэлгэрэнгүй</a> |
                <a asp-action="Delete" asp-route-id="@item.workerId">Устгах</a>
            </td>
        </tr>
}
    </tbody>
</table>
